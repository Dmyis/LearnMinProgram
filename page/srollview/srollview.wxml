<!--page/srollview/srollview.wxml-->
<!-- 1. scroll-x: 横向滚动 -->
<scroll-view class="container1"  scroll-x>
  <view wx:for="{{10}}" class="item1">{{item}}</view>
</scroll-view>

<!-- 2.scroll-y: 纵向滚动 -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>

<!-- 3.refresher-enabled: 自定义下拉刷新 -->
<!-- 4.refresher-default-style: 下拉刷新小圆点的样式       值：black  white  none(默认) -->
<!-- 5.refresher-threshold: 设置自定义下拉刷新阈值         值:  数字-->
<!-- 6.refresher-background：下拉刷新背景颜色 -->
<!-- 7.refresher-triggered: 当前下拉刷新的状态  false：未触发   true：触发  -->
<!-- 滚动事件 -->
<!-- 8.bindscroll：滚动的时候调用 -->
<!-- 9.bindscrolltolower: 滚动到最底部/右边触发 -->
<!-- 10.bindscrolltoupper：滚动最顶部/左边时触发 -->
<!-- 11.bindrefresherpulling：自定义下拉刷新被下拉调用 -->
<!-- 12.bindrefresherrestore：自定义下拉刷新复位时调用 -->
<scroll-view class="container2" scroll-y 
              refresher-enabled 
              refresher-background="#cf0"
              bindscrolltoupper="bandleTopLeft">
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>
